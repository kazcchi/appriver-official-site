// 検索・ソート設定
const searchSortConfig = {
  defaultSort: "releaseDate",          // デフォルトソート
  defaultOrder: "desc",                // デフォルト順序（最新順）
  searchFields: ["title", "album"],    // 検索対象フィールド
  itemsPerPage: 20                     // 最大表示件数
};

// 楽曲データ配列取得関数
function getSongsArray() {
  return Object.entries(songsData).map(([id, data]) => ({
    id,
    ...data
  }));
}

// デフォルトエクスポート（モジュール対応）
if (typeof module !== 'undefined' && module.exports) {
  module.exports = { songsData, searchSortConfig, getSongsArray };
}